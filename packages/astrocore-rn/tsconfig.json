{
  "extends": "@react-native/tsconfig/tsconfig.json",
  "compilerOptions": {
    "outDir": "lib/typescript",
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "target": "esnext",
    "module": "esnext"
  },
  "include": [
    "src"
  ]
}
